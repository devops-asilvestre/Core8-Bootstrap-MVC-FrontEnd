@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="col-12 d-flex align-items-center justify-content-center bg-transparent">
    <div class="col-md-10 col-10 box-shadow-2 p-0">
        <div class="card border-grey border-lighten-3 px-5px py-25px m-0 bg-dark">
            <div class="card-header border bg-cyan ">
                <div class="col-md-12 card-title text-center">
                    <img src="~/img/mobile-portal.png"  />
                </div>
                <h6 class="form-label line-on-side text-muted text-center  pt-2">
                    <span>M2|Marketplace</span>
                </h6>
            </div>
            <br />
            <div class="card-body text-white ">

                <div class="row col-md-12 ">
                    <div class="col-md-7">
                        <section>
                            <form id="account" method="post">
                                <h2>Use uma conta local para fazer login.</h2>
                                <hr />

                                <div class="form-floating mb-3">
                                    <input class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" type="email" data-val="true" data-val-email="O campo Email não é um endereço de email válido." data-val-required="O campo E-mail é obrigatório." id="Input_Email" name="Input.Email" value="" />
                                    <label class="form-label" for="Input_Email">Email</label>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" type="password" data-val="true" data-val-required="O campo Senha é obrigatório." id="Input_Password" name="Input.Password" value="" />
                                    <label class="form-label" for="Input_Password">Senha</label>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Input.Password" data-valmsg-replace="true"></span>
                                </div>
                                <div class="checkbox mb-3">
                                    <label class="form-label" for="Input_RememberMe">
                                        <input class="form-check-input" type="checkbox" data-val="true" data-val-required="O Lembre-se de mim? campo é obrigatório." id="Input_RememberMe" name="Input.RememberMe" value="true" />
                                        Lembre de mim?
                                    </label>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-success">Log in</button>
                                </div>
                                 <br />
                                <div>
                                    <p>
                                        <a id="forgot-password" href="/Account/ForgotPassword">Esqueceu sua senha?</a>
                                    </p>
                                    <p>
                                        <a href="/Account/Registro?returnUrl=%2F">Registre-se como um novo usuário</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" href="/Account/ResendEmailConfirmation">Reenviar e-mail de confirmação</a>
                                    </p>
                                </div>

                            </form>
                        </section>
                    </div>
                    <div class="col-md-5 col-md-offset-2">
                        <section>
                            <h3>Use outro serviço para fazer login.</h3>
                            <hr />
                            <div>
                                @* <p>
                                    Não há serviços de autenticação externos configurados. Veja isto<a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        artigo sobre como configurar este aplicativo ASP.NET para oferecer suporte ao login por meio de serviços externos
                                    </a>.
                                </p> *@
                                <img src="~/img/icons8-google-36.png" />
                                <img src="~/img/icons8-linkedin-36.png" />
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


